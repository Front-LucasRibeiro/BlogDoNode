<h2>Lista de Categorias:</h2>
<hr>
<a href="/admin/categorias/add">
  <button class="btn btn-success">Nova categoria</button>
</a>
{{#each categorias}}
<div class="card card-body mt-4">
  <h4>{{nome}}</h4>
  <small>Slug: {{slug}}</small>
  <small>Data de criação: {{date}}</small>
  <a class="mt-4" href="/admin/categorias/edit/{{_id}}">
    <button class="btn btn-success">Editar categoria</button>
  </a>
  <form action="/admin/categorias/deletar" method="POST">
    <input type="hidden" name="id" value="{{_id}}">
    <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
  </form>
</div>
{{else}}
  <h4 class="mt-2">Nenhuma categoria registrada!</h4>
{{/each}}